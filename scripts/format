#!/bin/bash -eux

if [ $# = 0 ]; then
  BLACK_ARG=""
else
  BLACK_ARG=$*
fi

black -l 80 $BLACK_ARG \
  d3rlpy/models \
  d3rlpy/q_functions.py \
  d3rlpy/encoders.py \
  d3rlpy/dataset.pyi \
  d3rlpy/preprocessing \
  d3rlpy/augmentation \
  d3rlpy/base.py \
  d3rlpy/logger.py \
  d3rlpy/gpu.py \
  d3rlpy/context.py \
  d3rlpy/argument_utils.py \
  tests/models \
  tests/preprocessing \
  tests/augmentation \
  tests/test_gpu.py \
  tests/test_context.py \
  tests/test_argument_utils.py \
  tests/test_q_functions.py \
  tests/test_encoders.py
